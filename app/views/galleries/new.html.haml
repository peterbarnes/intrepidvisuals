.row
  .col-md-6.col-md-offset-3
    = form_for(@gallery) do |f| 
      .gallery-form
        = f.label :name
        = f.text_field :name, class: 'gallery-control'

        = f.label :unlock_key
        = f.text_field :unlock_key, class: 'gallery-control'

        = f.label :images
        = f.text_area :images, class: 'gallery-control'

        = f.submit "Create gallery", class: 'gallery-control'